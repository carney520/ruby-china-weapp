.container {
  width: 100%;
  padding-top: 68px;
  box-sizing: border-box;
  height: 100vh;
}

.nav-bar {
  position: fixed;
  display: flex;
  flex-direction: column;
  background-color: rgba(255, 255, 255, 0.6);
  top: 0;
  width: 100%;
  z-index: 100;
}

.nav-bar__body {
  display: flex;
  padding: 5px 10px;
}

.nav-bar__icon {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 6px 4px;
  border-radius: 20px;
  border: 1px solid rgba(0, 0, 0, 0.03);
  background-color: rgba(255, 255, 255, 0.7);
  min-width: 24px;
  margin-right: 5px;
}

.nav-bar__icon.hover {
  background-color: #ccc;
}

.nav-bar__icon image {
  width: 20px;
  height: 20px;
}

.nav-bar__icon text {
  margin-left: 3px;
  font-size: 13px;
}

.footer {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 10px 0;
  font-size: 14px;
  color: gray;
}

.loading text {
  margin-left: 5px;
}


.nodes {
  box-sizing: border-box;
  position: fixed;
  padding-top: 68px;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.9);
  overflow-y: auto;
  z-index: 5;
}

.nodes-container {
  height: 100%;
}

.node {
  padding: 0 40rpx;
  box-sizing: border-box;
}

.node__section {
  font-size: 10px;
}

.node__items {
  margin-top: 0.5em;
}

.node__item {
  display: inline-block;
  text-align: center;
  font-size: 14px;
  border-radius: 3px;
  border: 1px solid #444;
  white-space: nowrap;
  margin-right: 0.5em;
  margin-bottom: 0.5em;
  padding: 0.3em 0.5em;
  transition: all 0.3s ease;
}

.node__item.hover,
.node__item.active {
  color: white;
  background-color: #444;
}